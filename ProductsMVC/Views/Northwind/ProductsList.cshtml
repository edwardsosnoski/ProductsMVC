@model ProductsListViewModel

@{
    ViewData["Title"] = "Products List";
}

<h1>List of Products</h1>

<form asp-controller="Northwind" asp-action="AddProduct">
    <button>Add New Item</button>
</form>

<ul>
    @foreach(var product in Model.ProductsList)
    {
        <li><a asp-controller="Northwind" asp-action="ProductListItem" asp-route-id="@product.Id">@product.Name</a></li>
    }
</ul>